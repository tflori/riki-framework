{
  "name": "tflori/riki-framework",
  "type": "library",
  "description": "A minimalistic framework to connect different libraries within your application.",
  "license": "MIT",
  "config": {
    "bin-dir": "vendor/bin"
  },
  "authors": [
    {
      "name": "Thomas Flori",
      "email": "thflori@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "symfony/dotenv": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "Riki\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Riki\\Test\\": "tests"
    }
  },
  "scripts": {
    "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=example tests"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "mockery/mockery": "^1.1",
    "squizlabs/php_codesniffer": "^3.3"
  }
}
